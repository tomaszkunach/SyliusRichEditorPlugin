{#
    UI Element template
    type: image_collection
    element fields :
        images
#}

<div class="container">
    <div class="row row-cols-2">
        {% for image in element.images %}
            <div class="col">
                {% if image.link is not empty %}
                    <a href="{{ image.link }}">
                        <img class="img-fluid" src="{{ monsieurbiz_richeditor_get_media_without_upload_dir(image.image)|imagine_filter('monsieurbiz_rich_editor_image') }}" alt="{{ image.alt|default('') }}" title="{{ image.title|default('') }}" />
                    </a>
                {% else %}
                    <img class="img-fluid" src="{{ monsieurbiz_richeditor_get_media_without_upload_dir(image.image)|imagine_filter('monsieurbiz_rich_editor_image') }}" alt="{{ image.alt|default('') }}" title="{{ image.title|default('') }}" />
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

